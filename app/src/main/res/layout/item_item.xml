<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp">



    <com.example.lottiedemo.CircleDownloadView
        android:id="@+id/circle_download_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#220000ff">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="12dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/download_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/circle_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#11ff0000"
            app:lottie_fileName="init2Start.json" />
    </com.example.lottiedemo.CircleDownloadView>

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#0000ff"
        android:textSize="12dp" />
</RelativeLayout>